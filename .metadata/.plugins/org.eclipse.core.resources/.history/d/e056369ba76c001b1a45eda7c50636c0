			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		
		skillMeter.setBorderPainted(false);
		skillMeter.setOpaque(false);
		skillMeter.setContentAreaFilled(false);
		skillMeter.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
//				dispose();
//				Catchme I=new Catchme();
//				I.setVisible(true);
