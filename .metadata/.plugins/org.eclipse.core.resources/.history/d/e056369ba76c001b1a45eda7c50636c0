		});
		skillMeter.setBounds(100, 220, 208, 297);
		this.getContentPane().add(skillMeter);
		
		JButton demin = new JButton("");
		demin.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
//				dispose();
//				Acceuil2 I=new Acceuil2();
//				I.setVisible(true);
			}
		});
		
		try {
			URL tetrisUrl = new URL("https://i.ibb.co/4P8tLwT/tetris.jpg");
			demin.setIcon(new ImageIcon(tetrisUrl));
		} catch (MalformedURLException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		
		demin.setIcon(new ImageIcon(GameCenter.class.getResource("/tp1/d\u00E9min.png")));
		demin.setOpaque(false);
		demin.setContentAreaFilled(false);
		demin.setBorderPainted(false);
		demin.setBounds(400, 220, 208, 297);
