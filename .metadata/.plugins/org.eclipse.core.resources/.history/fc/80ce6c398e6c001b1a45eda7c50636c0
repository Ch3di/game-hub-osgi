package sokobanCoree;

import java.awt.Image;
import java.io.ByteArrayOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.net.URL;

import javax.swing.ImageIcon;

public class Area extends Actor {

    public Area(int x, int y) {
        super(x, y);
        
        initArea();
    }
    
    private void initArea() {
        	byte[] image = readFileAsBytes(getClass(), "src/sokobanCoree/area.png");
       	    ImageIcon iicon = new ImageIcon(image);
            Image imagea = iicon.getImage();
            this.setImage(imagea);




    }
    
    static public byte[] readFileAsBytes(Class c, String fileName) throws IOException {
        InputStream inStream = new java.io.BufferedInputStream(c.getClassLoader().getResourceAsStream(fileName));
        ByteArrayOutputStream out = new ByteArrayOutputStream();
        int nbytes = 0;
        byte[] buffer = new byte[100000];

        try {
            while ((nbytes = inStream.read(buffer)) != -1) {
                out.write(buffer, 0, nbytes);
            }
            return out.toByteArray();
        } finally {
            if (inStream != null) { 
                inStream.close();
            }
            if (out != null) {
                out.close();
            }
        }
        return buffer;
    }
}
